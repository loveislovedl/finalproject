<a href="/dashboard">&larr; Back</a>
<div class="admin-title">
  <h2>View / Edit Car</h2>

  <form action="/delete-post/<%= car._id %>?_method=DELETE" method="POST">
    <input type="submit" value="Delete" class="btn-delete btn">
  </form>

</div>

<form action="/edit-post/<%= car._id %>?_method=PUT" method="POST">
  <label for="image"><b>Image URL</b></label>
  <input type="text" name="image" placeholder="Enter Image URL" value="<%= car.image %>" required>

  <label for="model"><b>Model</b></label>
  <input type="text" placeholder="Car Model" name="model" value="<%= car.model %>">

  <label for="description"><b>Description</b></label>
  <textarea name="description" placeholder="Car Description" cols="50" rows="10"><%= car.description %></textarea>

  <input type="submit" value="Update" class="btn">

</form>